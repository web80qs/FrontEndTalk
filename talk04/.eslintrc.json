{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "blockBindings": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "plugins": [ "html"],
    "rules": {
        "no-console":0,
        "no-undef":0,
        "no-unused-vars": 0,
        "arrow-parens": 0,
        "no-tabs": 0,
        "spaced-comment": 0,
        "comma-dangle": 0,
        "camelcase": 0,
        "no-multiple-empty-lines": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "eol-last": 0,
        "semi": 0,
        "space-before-function-paren": 0,
        // "no-control-regex": 0,
        "no-useless-escape": 0
    }
}
